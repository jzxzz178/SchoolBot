{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.SQLite"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Logs",
        "Args": {
          "connectionString": "DataSource = D:\\Study\\SchoolBot_Repository\\LogDataBase",
          "tableName": "requests_from_users",
          "autoCreateSqlTable": "true",
          "removeStandardColumns": [
            "MessageTemplate",
            "Level"
          ],
          "customColumns": [
            {
              "ColumnName": "userId",
              "DataType": "int"
            }
          ]
        }
      }
    ]
  }
}